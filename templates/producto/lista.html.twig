{% extends "base.html.twig" %}

{% block body %}
    {% include "header.html.twig" %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h3 class="list-title">Lista de productos</h3>
    <div class="product-grid">
        {% for producto in productos %}
            <div class="product-container">
                <img src="{{ asset(producto.imagen) }}" width="100" height="100" alt="{{ producto.nombre }}"/>
                <div class="description-container">
                    <h4 id="product-title">{{ producto.nombre }}</h4>
                    <p id="product-subtitle">{{ producto.descripcion }}</p>
                    <div class="price-container">
                        <h3>${{ producto.precio }}</h3>
                        <a href="{{ path('detalle_producto', {'id': producto.id}) }}" class="details-button">Ver detalle</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
