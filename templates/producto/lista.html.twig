{% extends "base.html.twig" %}

{% block body %}
    <div class="header">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h3 id="title">Carrito de Compras - {{ app.user.nombre }}</h3>
        {% endif %}
        <div>
            <button class="btn-ligth">Ver orden</button>
            <button class="btn-ligth">Salir</button>
        </div>
    </div>
    <h3 class="list-title">Lista de productos</h3>
    <div class="product-grid">
        {% for producto in productos %}
            <div class="product-container">
                <img src="{{ producto.imagen }}" width="100" height="100" alt="{{ producto.nombre }}"/>
                <div class="description-container">
                    <h4 id="product-title">{{ producto.nombre }}</h4>
                    <p id="product-subtitle">{{ producto.descripcion }}</p>
                    <div class="price-container">
                        <h3>${{ producto.precio }}</h3>
                        <button type="button" class="details-button">Ver detalle</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
